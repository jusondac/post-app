<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Create New Post</h1>
        <%= form_with model: @post, local: true, class: "space-y-6" do |form| %>
          <% if @post.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @post.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300",
                placeholder: "Enter your post title..." %>
          </div>
          <div>
            <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :content, 
                rows: 12,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 resize-vertical",
                placeholder: "Write your post content here..." %>
          </div>
          <div>
            <%= form.label :publisher_id, "Publisher", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.collection_select :publisher_id, @publishers, :id, :name, 
                { prompt: "Select a publisher (optional)" },
                { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" } %>
          </div>
          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status, 
                options_for_select([['Draft', 'draft'], ['Published', 'published']], @post.status || 'draft'),
                {},
                { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300" } %>
          </div>
          <div class="flex justify-between items-center pt-4">
            <%= link_to "Cancel", posts_path, 
                class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition duration-300" %>
            <%= form.submit "Create Post", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-300 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
