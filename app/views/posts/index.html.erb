<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 rounded-full mb-6">
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3v8m0 0V9a2 2 0 00-2-2H9m10 0V9a2 2 0 00-2-2H9"></path>
          </svg>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-4">
          Discover Amazing Stories
        </h1>
        <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto mb-8">
          Explore a collection of inspiring posts, insights, and ideas from our community of writers
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
          <% if user_signed_in? && current_user.can_create_posts? %>
            <%= link_to new_post_path, 
                class: "inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-blue-50 transition duration-300 transform hover:scale-105 shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Create Your Story
            <% end %>
            <%= link_to my_posts_posts_path, 
                class: "inline-flex items-center px-8 py-4 bg-blue-500/30 text-white font-semibold rounded-xl hover:bg-blue-500/40 transition duration-300 border-2 border-white/30" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              My Posts
            <% end %>
          <% else %>
            <div class="text-blue-100">
              <%= user_signed_in? ? "Sign in with a user role to start writing" : "Sign in to start writing your own stories" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- Stats Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900"><%= @posts.count %></h3>
          <p class="text-gray-600">Published Posts</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-blue-600 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900"><%= @posts.map(&:user).uniq.count %></h3>
          <p class="text-gray-600">Active Writers</p>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-600 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900"><%= @posts.joins(:publisher).count %></h3>
          <p class="text-gray-600">Published Content</p>
        </div>
      </div>
    </div>
  </div>
  <!-- Posts Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <% if @posts.any? %>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Stories</h2>
        <p class="text-lg text-gray-600">Fresh perspectives and insights from our community</p>
      </div>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <% @posts.each_with_index do |post, index| %>
          <article class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden cursor-pointer transform hover:-translate-y-2" 
                   onclick="window.location='<%= post_path(post) %>'"
                   data-href="<%= post_path(post) %>">
            <!-- Card Header -->
            <div class="relative bg-gradient-to-r <%= ['from-blue-500 to-purple-600', 'from-green-500 to-blue-600', 'from-purple-500 to-pink-600', 'from-yellow-500 to-red-600', 'from-indigo-500 to-purple-600', 'from-pink-500 to-rose-600'][index % 6] %> p-6 text-white">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center mb-3">
                    <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center text-white font-bold mr-3">
                      <%= post.user.email.first.upcase %>
                    </div>
                    <div>
                      <p class="font-medium text-white/90"><%= post.user.email.split('@').first.capitalize %></p>
                      <p class="text-xs text-white/70"><%= post.created_at.strftime("%b %d, %Y") %></p>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/20 text-white">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Published
                  </span>
                </div>
              </div>
            </div>
            <!-- Card Content -->
            <div class="p-6">
              <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300 line-clamp-2">
                <%= post.title %>
              </h2>
              <p class="text-gray-600 leading-relaxed mb-4 line-clamp-3">
                <%= truncate(post.content, length: 150) %>
              </p>
              <% if post.publisher.present? %>
                <div class="flex items-center mb-4" onclick="event.stopPropagation()">
                  <div class="flex items-center text-sm text-blue-600 bg-blue-50 px-3 py-1 rounded-full">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <%= link_to post.publisher.name, publisher_path(post.publisher), 
                        class: "hover:text-blue-800 font-medium" %>
                  </div>
                </div>
              <% end %>
              <!-- Card Footer -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= time_ago_in_words(post.created_at) %> ago
                </div>
                <div class="flex items-center text-blue-600 font-medium group-hover:text-blue-800 transition-colors duration-300">
                  <span class="mr-1">Read More</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
              <!-- Owner Actions -->
              <% if user_signed_in? && current_user == post.user %>
                <div class="flex space-x-2 mt-4 pt-4 border-t border-gray-100" onclick="event.stopPropagation()">
                  <%= link_to edit_post_path(post), 
                      class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-green-700 bg-green-50 rounded-lg hover:bg-green-100 transition-colors duration-300" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  <% end %>
                  <%= link_to post_path(post), 
                      method: :delete, 
                      data: { confirm: "Are you sure you want to delete this post?" },
                      class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-red-700 bg-red-50 rounded-lg hover:bg-red-100 transition-colors duration-300" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete
                  <% end %>
                </div>
              <% end %>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 bg-gradient-to-r from-gray-300 to-gray-400 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">No Posts Yet</h3>
          <p class="text-lg text-gray-600 mb-8">Be the first to share your story with the community!</p>
          <% if user_signed_in? && current_user.can_create_posts? %>
            <%= link_to new_post_path, 
                class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition duration-300 transform hover:scale-105 shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Create Your First Post
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Call to Action Section -->
  <% if user_signed_in? && current_user.can_create_posts? %>
    <div class="bg-gradient-to-r from-blue-600 to-purple-700 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-4">Ready to Share Your Story?</h2>
          <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
            Join our community of writers and share your unique perspective with the world
          </p>
          <%= link_to new_post_path, 
              class: "inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-blue-50 transition duration-300 transform hover:scale-105 shadow-lg" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Start Writing Now
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
