<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col lg:flex-row items-center justify-between">
        <div class="text-center lg:text-left mb-8 lg:mb-0">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-full mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h1 class="text-4xl lg:text-5xl font-bold mb-4">My Writing Dashboard</h1>
          <p class="text-xl text-indigo-100 max-w-2xl">
            Manage, edit, and track all your posts in one beautiful place
          </p>
        </div>
        <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
          <%= link_to posts_path, 
              class: "inline-flex items-center px-6 py-3 bg-white/20 text-white font-semibold rounded-xl hover:bg-white/30 transition duration-300 border-2 border-white/30" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            View All Posts
          <% end %>
          <%= link_to new_post_path, 
              class: "inline-flex items-center px-6 py-3 bg-white text-indigo-600 font-semibold rounded-xl hover:bg-indigo-50 transition duration-300 transform hover:scale-105 shadow-lg" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create New Post
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- Stats Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Posts</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.posts.count %></p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Published</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.posts.published.count %></p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-yellow-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Drafts</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.posts.draft.count %></p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-purple-500">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">With Publisher</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.posts.joins(:publisher).count %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Advanced Search Section -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
      <div class="flex items-center mb-6">
        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mr-4">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">Search & Filter</h2>
      </div>
      <%= search_form_for @q, url: my_posts_posts_path, method: :get, local: true, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="space-y-2">
            <%= f.label :title_cont, class: "flex items-center text-sm font-semibold text-gray-700" do %>
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              Search Title
            <% end %>
            <%= f.search_field :title_cont, placeholder: "Enter title keywords...", 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition duration-300 bg-gray-50 hover:bg-white" %>
          </div>
          <div class="space-y-2">
            <%= f.label :created_at_gteq, class: "flex items-center text-sm font-semibold text-gray-700" do %>
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              From Date
            <% end %>
            <%= f.date_field :created_at_gteq, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition duration-300 bg-gray-50 hover:bg-white" %>
          </div>
          <div class="space-y-2">
            <%= f.label :created_at_lteq, class: "flex items-center text-sm font-semibold text-gray-700" do %>
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              To Date
            <% end %>
            <%= f.date_field :created_at_lteq, 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition duration-300 bg-gray-50 hover:bg-white" %>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <%= f.label :publisher_name_cont, class: "flex items-center text-sm font-semibold text-gray-700" do %>
              <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Publisher
            <% end %>
            <%= f.search_field :publisher_name_cont, placeholder: "Search publisher name...", 
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition duration-300 bg-gray-50 hover:bg-white" %>
          </div>
          <div class="flex items-end space-x-3">
            <%= f.submit "🔍 Search", class: "flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3 px-6 rounded-xl hover:from-blue-700 hover:to-purple-700 transition duration-300 transform hover:scale-105 shadow-lg" %>
            <%= link_to my_posts_posts_path(filter: @filter), 
                class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-xl transition duration-300 text-center" do %>
              🗑️ Clear
            <% end %>
          </div>
        </div>
        <%= hidden_field_tag :filter, @filter %>
      <% end %>
    </div>
    <!-- Filter Tabs -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <div class="flex flex-wrap gap-3">
        <%= link_to my_posts_posts_path(q: params[:q]), 
            class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition duration-300 #{'bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg' if @filter == 'all'} #{'bg-gray-100 text-gray-700 hover:bg-gray-200' if @filter != 'all'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H5m14 14H5"></path>
          </svg>
          All Posts
          <span class="ml-2 px-2 py-1 text-xs rounded-full <%= @filter == 'all' ? 'bg-white/20 text-white' : 'bg-blue-100 text-blue-600' %>">
            <%= current_user.posts.count %>
          </span>
        <% end %>
        <%= link_to my_posts_posts_path(filter: 'published', q: params[:q]), 
            class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition duration-300 #{'bg-gradient-to-r from-green-600 to-blue-600 text-white shadow-lg' if @filter == 'published'} #{'bg-gray-100 text-gray-700 hover:bg-gray-200' if @filter != 'published'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Published
          <span class="ml-2 px-2 py-1 text-xs rounded-full <%= @filter == 'published' ? 'bg-white/20 text-white' : 'bg-green-100 text-green-600' %>">
            <%= current_user.posts.published.count %>
          </span>
        <% end %>
        <%= link_to my_posts_posts_path(filter: 'draft', q: params[:q]), 
            class: "inline-flex items-center px-6 py-3 rounded-xl font-semibold transition duration-300 #{'bg-gradient-to-r from-yellow-600 to-orange-600 text-white shadow-lg' if @filter == 'draft'} #{'bg-gray-100 text-gray-700 hover:bg-gray-200' if @filter != 'draft'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Drafts
          <span class="ml-2 px-2 py-1 text-xs rounded-full <%= @filter == 'draft' ? 'bg-white/20 text-white' : 'bg-yellow-100 text-yellow-600' %>">
            <%= current_user.posts.draft.count %>
          </span>
        <% end %>
      </div>
    </div>
    <% if @posts.any? %>
      <!-- Posts Table -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            <%= @filter.capitalize %> Posts 
            <span class="text-sm font-normal text-gray-500">
              (<%= @posts.total_count %> total)
            </span>
          </h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <%= sort_link(@q, :title, "📝 Title", class: "text-gray-600 hover:text-gray-800 font-bold") %>
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  📊 Status
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  🏢 Publisher
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  <%= sort_link(@q, :created_at, "📅 Created", class: "text-gray-600 hover:text-gray-800 font-bold") %>
                </th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                  📄 Preview
                </th>
                <th class="px-6 py-4 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">
                  ⚡ Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% @posts.each_with_index do |post, index| %>
                <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 cursor-pointer transition-all duration-300 group" 
                    onclick="window.location='<%= post_path(post) %>'"
                    data-href="<%= post_path(post) %>">
                  <td class="px-6 py-6">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-gradient-to-r <%= ['from-blue-500 to-purple-600', 'from-green-500 to-blue-600', 'from-purple-500 to-pink-600'][index % 3] %> rounded-full flex items-center justify-center text-white font-bold mr-4 group-hover:scale-110 transition-transform duration-300">
                        <%= post.title.first.upcase %>
                      </div>
                      <div>
                        <div class="text-sm font-bold text-gray-900 group-hover:text-blue-600 transition-colors duration-300">
                          <%= truncate(post.title, length: 50) %>
                        </div>
                        <div class="text-xs text-gray-500">
                          <%= pluralize(post.content.length, 'character') %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %> group-hover:scale-105 transition-transform duration-300">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <% if post.published? %>
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        <% else %>
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        <% end %>
                      </svg>
                      <%= post.status.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-6" onclick="event.stopPropagation()">
                    <% if post.publisher.present? %>
                      <div class="flex items-center">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-2">
                          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                          </svg>
                        </div>
                        <%= link_to post.publisher.name, publisher_path(post.publisher), 
                            class: "text-blue-600 hover:text-blue-800 font-medium underline" %>
                      </div>
                    <% else %>
                      <span class="text-gray-400 italic">No publisher</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-6">
                    <div class="text-sm text-gray-900 font-medium">
                      <%= post.created_at.strftime("%b %d, %Y") %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= post.created_at.strftime("%I:%M %p") %>
                    </div>
                  </td>
                  <td class="px-6 py-6">
                    <div class="max-w-xs">
                      <p class="text-sm text-gray-600 leading-relaxed">
                        <%= truncate(post.content, length: 80) %>
                      </p>
                    </div>
                  </td>
                  <td class="px-6 py-6 text-right" onclick="event.stopPropagation()">
                    <div class="flex justify-end space-x-2">
                      <%= link_to post_path(post), 
                          class: "inline-flex items-center px-3 py-2 text-xs font-medium text-blue-700 bg-blue-100 rounded-lg hover:bg-blue-200 transition-colors duration-300" do %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View
                      <% end %>
                      <%= link_to edit_post_path(post), 
                          class: "inline-flex items-center px-3 py-2 text-xs font-medium text-green-700 bg-green-100 rounded-lg hover:bg-green-200 transition-colors duration-300" do %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                      <% end %>
                      <%= link_to post_path(post), 
                          method: :delete, 
                          data: { confirm: "Are you sure you want to delete '#{post.title}'?" },
                          class: "inline-flex items-center px-3 py-2 text-xs font-medium text-red-700 bg-red-100 rounded-lg hover:bg-red-200 transition-colors duration-300" do %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Pagination -->
      <div class="mt-8 bg-white rounded-2xl shadow-lg p-6">
        <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
          <div class="flex items-center text-sm text-gray-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Showing <span class="font-semibold text-gray-900"><%= @posts.offset_value + 1 %></span> to 
            <span class="font-semibold text-gray-900"><%= @posts.offset_value + @posts.length %></span> of 
            <span class="font-semibold text-gray-900"><%= @posts.total_count %></span> results
          </div>
          <div class="pagination-wrapper">
            <%= paginate @posts, params: { q: params[:q], filter: @filter } %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Enhanced Empty State -->
      <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 bg-gradient-to-r from-gray-300 to-gray-400 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if params[:q].present? %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              <% end %>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            <% if params[:q].present? %>
              No Posts Found
            <% else %>
              No <%= @filter == 'all' ? 'Posts' : @filter.capitalize %> Yet
            <% end %>
          </h3>
          <p class="text-lg text-gray-600 mb-8">
            <% if params[:q].present? %>
              No posts match your search criteria. Try adjusting your filters or search terms.
            <% elsif @filter == 'all' %>
              Ready to start your writing journey? Create your first post and share your thoughts with the world!
            <% elsif @filter == 'draft' %>
              No drafts found. Start writing and save your ideas for later.
            <% else %>
              No published posts yet. Share your thoughts with the community!
            <% end %>
          </p>
          <div class="flex flex-col sm:flex-row justify-center space-y-3 sm:space-y-0 sm:space-x-4">
            <% if params[:q].present? %>
              <%= link_to my_posts_posts_path(filter: @filter), 
                  class: "inline-flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-xl transition duration-300" do %>
                🗑️ Clear Search
              <% end %>
            <% end %>
            <%= link_to new_post_path, 
                class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition duration-300 transform hover:scale-105 shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Create New Post
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
