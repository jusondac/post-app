<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Posts</h1>
      <%= link_to "Create New Post", new_post_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300" %>
    </div>

    <!-- Search Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <%= search_form_for @q, url: my_posts_posts_path, method: :get, local: true, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <%= f.label :title_cont, "Search Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.search_field :title_cont, placeholder: "Enter title...", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          <div>
            <%= f.label :created_at_gteq, "From Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.date_field :created_at_gteq, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          <div>
            <%= f.label :created_at_lteq, "To Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.date_field :created_at_lteq, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :publisher_name_cont, "Publisher", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.search_field :publisher_name_cont, placeholder: "Search publisher...", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          <div class="flex items-end space-x-2">
            <%= f.submit "Search", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-300" %>
            <%= link_to "Clear", my_posts_posts_path(filter: @filter), 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-6 rounded-md transition duration-300" %>
          </div>
        </div>
        <%= hidden_field_tag :filter, @filter %>
      <% end %>
    </div>

    <!-- Filter buttons -->
    <div class="mb-6">
      <div class="flex space-x-2">
        <%= link_to "All", my_posts_posts_path(q: params[:q]), 
            class: "px-4 py-2 rounded-lg font-medium transition duration-300 #{'bg-blue-600 text-white' if @filter == 'all'} #{'bg-white text-gray-700 hover:bg-gray-100' if @filter != 'all'}" %>
        <%= link_to "Published", my_posts_posts_path(filter: 'published', q: params[:q]), 
            class: "px-4 py-2 rounded-lg font-medium transition duration-300 #{'bg-blue-600 text-white' if @filter == 'published'} #{'bg-white text-gray-700 hover:bg-gray-100' if @filter != 'published'}" %>
        <%= link_to "Drafts", my_posts_posts_path(filter: 'draft', q: params[:q]), 
            class: "px-4 py-2 rounded-lg font-medium transition duration-300 #{'bg-blue-600 text-white' if @filter == 'draft'} #{'bg-white text-gray-700 hover:bg-gray-100' if @filter != 'draft'}" %>
      </div>
    </div>

    <% if @posts.any? %>
      <!-- Table View -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= sort_link(@q, :title, "Title", class: "text-gray-500 hover:text-gray-700") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Publisher
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= sort_link(@q, :created_at, "Created", class: "text-gray-500 hover:text-gray-700") %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Content
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @posts.each do |post| %>
                <tr class="hover:bg-gray-50 cursor-pointer transition-colors duration-150" 
                    onclick="window.location='<%= post_path(post) %>'"
                    data-href="<%= post_path(post) %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= post.title %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= post.status.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" onclick="event.stopPropagation()">
                    <% if post.publisher.present? %>
                      <%= link_to post.publisher.name, publisher_path(post.publisher), 
                          class: "text-blue-600 hover:text-blue-800 underline" %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= post.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="max-w-xs">
                      <%= truncate(post.content, length: 100) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium" onclick="event.stopPropagation()">
                    <div class="flex justify-end space-x-2">
                      <%= link_to "View", post_path(post), 
                          class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_post_path(post), 
                          class: "text-green-600 hover:text-green-900" %>
                      <%= link_to "Delete", post_path(post), 
                          method: :delete, 
                          data: { confirm: "Are you sure?" },
                          class: "text-red-600 hover:text-red-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex justify-between items-center">
        <div class="text-sm text-gray-700">
          Showing <%= @posts.offset_value + 1 %> to <%= @posts.offset_value + @posts.length %> of <%= @posts.total_count %> results
        </div>
        <div class="flex space-x-2">
          <%= paginate @posts, params: { q: params[:q], filter: @filter } %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">
            No <%= @filter == 'all' ? 'posts' : @filter %> found
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if params[:q].present? %>
              No posts match your search criteria. Try adjusting your filters.
            <% elsif @filter == 'all' %>
              Get started by creating your first post.
            <% elsif @filter == 'draft' %>
              You don't have any draft posts yet.
            <% else %>
              You don't have any published posts yet.
            <% end %>
          </p>
          <div class="mt-6">
            <%= link_to "Create New Post", new_post_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
