<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <div class="flex justify-between items-start mb-6">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h1 class="text-3xl font-bold text-gray-900"><%= @post.title %></h1>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @post.status.capitalize %>
              </span>
            </div>
            <p class="text-gray-600">
              By <%= @post.user.email %> • <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
            <% if @post.publisher.present? %>
              <p class="text-blue-600 text-sm mt-1">
                Published to: <%= link_to @post.publisher.name, publisher_path(@post.publisher), class: "hover:text-blue-800 underline" %>
              </p>
            <% end %>
          </div>
          <% if user_signed_in? && current_user == @post.user %>
            <div class="flex space-x-3">
              <%= link_to "Edit", edit_post_path(@post), 
                  class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300" %>
              <%= link_to "Delete", post_path(@post), 
                  method: :delete, 
                  data: { confirm: "Are you sure you want to delete this post?" },
                  class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300" %>
            </div>
          <% end %>
        </div>
        <hr class="border-gray-200 mb-8">
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-800 leading-relaxed whitespace-pre-wrap"><%= @post.content %></p>
        </div>
      </div>
    </div>
    <div class="mt-8 text-center">
      <% if user_signed_in? && current_user == @post.user %>
        <%= link_to "← Back to My Posts", my_posts_posts_path, 
            class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition duration-300 mr-3" %>
      <% end %>
      <%= link_to "← Back to All Posts", posts_path, 
          class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition duration-300" %>
    </div>
  </div>
</div>
