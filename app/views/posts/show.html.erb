<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <!-- Hero Section -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center">
        <div class="flex justify-center mb-4">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium <%= @post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <% if @post.published? %>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              <% else %>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              <% end %>
            </svg>
            <%= @post.status.capitalize %>
          </span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight mb-6">
          <%= @post.title %>
        </h1>
        <div class="flex flex-col sm:flex-row items-center justify-center text-gray-600 space-y-2 sm:space-y-0 sm:space-x-6">
          <div class="flex items-center">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold mr-3">
              <%= @post.user.email.first.upcase %>
            </div>
            <span class="font-medium"><%= @post.user.email %></span>
          </div>
          <div class="flex items-center text-sm">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
            </svg>
            <%= @post.created_at.strftime("%B %d, %Y") %>
          </div>
          <div class="flex items-center text-sm">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            <%= @post.created_at.strftime("%I:%M %p") %>
          </div>
        </div>
        <% if @post.publisher.present? %>
          <div class="mt-4">
            <div class="inline-flex items-center px-4 py-2 bg-blue-50 rounded-full">
              <svg class="w-4 h-4 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-blue-700 text-sm font-medium">Published to: </span>
              <%= link_to @post.publisher.name, publisher_path(@post.publisher), 
                  class: "text-blue-800 hover:text-blue-900 font-semibold ml-1 underline" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Content Section -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="px-8 py-12">
        <article class="prose prose-lg prose-gray max-w-none">
          <div class="text-gray-800 leading-relaxed text-lg whitespace-pre-wrap font-light">
            <%= simple_format(@post.content, {}, wrapper_tag: "div") %>
          </div>
        </article>
      </div>
    </div>
  </div>
  <!-- Action Bar -->
  <% if user_signed_in? && current_user == @post.user %>
    <div class="fixed bottom-6 right-6 z-50">
      <div class="flex flex-col space-y-3">
        <%= link_to edit_post_path(@post), 
            class: "bg-green-600 hover:bg-green-700 text-white p-3 rounded-full shadow-lg transition duration-300 transform hover:scale-105",
            title: "Edit Post" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        <%= link_to post_path(@post), 
            method: :delete, 
            data: { confirm: "Are you sure you want to delete this post?" },
            class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-full shadow-lg transition duration-300 transform hover:scale-105",
            title: "Delete Post" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
  <!-- Navigation Section -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex flex-col sm:flex-row items-center justify-between space-y-4 sm:space-y-0">
        <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
          <%= link_to posts_path, 
              class: "inline-flex items-center px-6 py-3 border-2 border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 font-medium transition duration-300 group" do %>
            <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            All Posts
          <% end %>
          <% if user_signed_in? && current_user == @post.user %>
            <%= link_to my_posts_posts_path, 
                class: "inline-flex items-center px-6 py-3 border-2 border-blue-300 rounded-lg text-blue-700 bg-blue-50 hover:bg-blue-100 hover:border-blue-400 font-medium transition duration-300 group" do %>
              <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              My Posts
            <% end %>
          <% end %>
        </div>
        <% if user_signed_in? && current_user.can_create_posts? %>
          <div class="flex space-x-3">
            <%= link_to new_post_path, 
                class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 font-medium transition duration-300 transform hover:scale-105 shadow-lg" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              New Post
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
