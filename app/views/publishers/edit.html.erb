<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Publisher</h1>
        <p class="text-gray-600 mb-8">Update the publisher information below</p>
        <%= form_with(model: @publisher, local: true, class: "space-y-6") do |form| %>
          <% if @publisher.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @publisher.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300",
                placeholder: "Enter publisher name..." %>
          </div>
          <div>
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-300 resize-vertical",
                placeholder: "Enter publisher description (optional)..." %>
          </div>
          <div class="flex items-center">
            <div class="flex items-center h-5">
              <%= form.check_box :active, 
                  class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= form.label :active, "Active Publisher", class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Active publishers can be assigned to posts</p>
            </div>
          </div>
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-900 mb-2">Publisher Statistics</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-gray-500">Total Posts:</span>
                <span class="font-medium text-gray-900"><%= @publisher.posts.count %></span>
              </div>
              <div>
                <span class="text-gray-500">Created:</span>
                <span class="font-medium text-gray-900"><%= @publisher.created_at.strftime("%b %d, %Y") %></span>
              </div>
            </div>
          </div>
          <div class="flex justify-between items-center pt-4">
            <div class="flex space-x-3">
              <%= link_to "Cancel", @publisher, 
                  class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition duration-300" %>
              <%= link_to "View Publisher", @publisher, 
                  class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition duration-300" %>
            </div>
            <%= form.submit "Update Publisher", 
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-300 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
